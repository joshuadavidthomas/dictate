{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dictate",
  "version": "0.1.0",
  "identifier": "dev.joshthomas.dictate",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "dictate",
        "width": 800,
        "height": 600,
        "visible": false,
        "backgroundColor": "#0B0B0C"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "linux": {
      "deb": {
        "postInstallScript": "../dist/scripts/postinstall.sh",
        "postRemoveScript": "../dist/scripts/postremove.sh"
      },
      "rpm": {
        "postInstallScript": "../dist/scripts/postinstall.sh",
        "postRemoveScript": "../dist/scripts/postremove.sh"
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:dictate.db"]
    }
  }
}
